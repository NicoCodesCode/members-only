<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") %>
  <body>
    <%- include("partials/header") %>
    <h2><%= title %></h2>
    <form method="POST">
      <div class="form-group">
        <label for="title">Title: </label>
        <input
          type="text"
          name="title"
          id="title"
          value="<%= invalidInput?.title %>"
          required
        />
      </div>
      <div class="form-group">
        <label for="text">Text: </label>
        <textarea
          name="text"
          id="text"
          value="<%= invalidInput?.text %>"
          required
        ></textarea>
      </div>
      <div><%- include("partials/formErrors") %></div>
      <button type="submit">Create</button>
      <a href="/"><button type="button">Go Back</button></a>
    </form>
  </body>
</html>
