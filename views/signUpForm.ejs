<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") %>
  <body>
    <h1><%= title %></h1>
    <form method="POST">
      <div>
        <label for="first-name">First Name: </label>
        <input
          type="text"
          name="firstName"
          id="first-name"
          value="<%= invalidInput?.firstName %>"
          required
        />
      </div>
      <div>
        <label for="last-name">Last Name: </label>
        <input
          type="text"
          name="lastName"
          id="last-name"
          value="<%= invalidInput?.lastName %>"
          required
        />
      </div>
      <div>
        <label for="username">Username: </label>
        <input
          type="text"
          name="username"
          id="username"
          value="<%= invalidInput?.username %>"
          required
        />
      </div>
      <div>
        <label for="password">Password: </label>
        <input type="password" name="password" id="password" required />
      </div>
      <div>
        <label for="confirm-password">Confirm Password: </label>
        <input
          type="password"
          name="confirmPassword"
          id="confirm-password"
          required
        />
      </div>
      <div><%- include("partials/formErrors") %></div>
      <button type="submit">Sign Up</button>
      <a href="/"><button type="button">Go Back</button></a>
    </form>
  </body>
</html>
