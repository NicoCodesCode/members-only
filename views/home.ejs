<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") %>
  <body>
    <%- include("partials/header") %>
    <main class="container">
      <% if (locals.currentUser) { %>
      <h2>Welcome Again, <%= currentUser.first_name %></h2>
      <% } %>
      <ul class="message-list">
        <% messages.map((message) => { %>
        <li class="message-card">
          <h3><%= message.title %></h3>
          <p><%= message.text %></p>
          <p>
            From <%= membershipStatus === "member" ? message.username :
            "anonymous" %>
          </p>
          <% if (locals.membershipStatus === "member") { %>
          <p><%= format(message.date, "yyyy-MM-dd") %></p>
          <% } %>
        </li>
        <% }) %>
      </ul>
    </main>
  </body>
</html>
